@model ExploreCalifornia.Models.Post
@inject ExploreCalifornia.Models.FormattingService Format

<article class="blog-post">
   
    <h1>@Html.ActionLink(Model.Title,"post", "Blog",
   new
   {
   year = Model.Posted.Year,
   month = Model.Posted.Month,
   key = Model.key

   }
   )
    </h1>
    <div class="details">
        Posted <span>@Format.AsReadableDate(@Model.Posted)</span> by <span>@Model.Author</span>
    </div>
    <div class="content">
        @Model.Body
    </div>
</article>